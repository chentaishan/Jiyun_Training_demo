<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/col_gray_line"></View>

    <LinearLayout
        android:id="@+id/attribute_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_goods_buy"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding_goods_buy"
        android:paddingBottom="@dimen/padding_goods_buy">

        <TextView
            android:id="@+id/txt_param"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="商品参数"
            android:textSize="@dimen/txt_size_good_param"></TextView>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>